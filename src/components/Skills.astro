---
const skills = [
  { name: 'HTML/CSS', level: 80 },
  { name: 'JavaScript', level: 75 },
  { name: 'Astro', level: 60 },
  { name: 'Node.js', level: 30 },
  { name: 'UI/UX Design', level: 85 },
  { name: 'Responsive Design', level: 90 },
];
---

<section id="skills" class="py-20 bg-gray-50">
  <div class="container mx-auto px-6">
    <h2 class="text-4xl font-display font-bold text-secondary mb-12 text-center" data-aos="fade-up">
      Skills & Expertise
    </h2>
    <div class="max-w-3xl mx-auto">
      {skills.map((skill) => (
        <div class="mb-6" data-aos="fade-up">
          <div class="flex justify-between mb-2">
            <span class="font-display font-bold">{skill.name}</span>
            <span class="text-gray-600">{skill.level}%</span>
          </div>
          <div class="h-2 bg-gray-200 rounded-full overflow-hidden">
            <div
              class="h-full bg-primary rounded-full transition-all duration-1000"
              style={`width: ${skill.level}%`}
            />
          </div>
        </div>
      ))}
    </div>
  </div>
</section>